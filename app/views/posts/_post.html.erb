<div class="row"> 
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: "post" do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>
      <p></p>
        <p><%= post.total_votes %> votes</p>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: "post" do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>

    <div class="span9 well">
      <%= render post.categories %>
       <h4><%= link_to post.title, fix_url(post.url) %></h4>
         <p><%= post.description %></p>
          <p><span class="quiet">posted by </span><%= link_to post.user.username, user_path(post.user) %> at <span class="quiet"><%= display_datetime(post.created_at) %></span></p>
           <small>
            <span>
              <%= link_to("#{post.comments.size} comments", post_path(post)) %>
            </span>
          </small>
   </div>
</div>
